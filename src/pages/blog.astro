---
import Layout from '../layouts/Layout.astro';
import { ViewTransitions } from 'astro:transitions';
import Logo from '../components/Logo.astro';

import { getCollection } from 'astro:content';

const posts = await getCollection('blog')
---

<Layout title="Blog">

  <div transition:name="logo" h-12 my-8 overflow-hidden text-2rem lh-14>
    <Logo></Logo>
  </div>
  <main font-chinese my-10>
    {
      posts.filter(p => !p.data.invisible).map((post, index) => (
        <div>
          <h3 transition:name={`article-title-${post.id}`} text-xl transition>
            <a naux-link href={`/article/${post.slug}`} >{post.data.title}</a>
          </h3>
        </div>
      ))
    }
  </main>
  <ViewTransitions />
</Layout>

