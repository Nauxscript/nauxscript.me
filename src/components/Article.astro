---
export interface Props {
  title: string;
  class?: string,
}

const { title, class: className, ...props } = Astro.props as Props

---

<div class="invisible hover:visible"  class={className} {...props} m-4>
  <h3 transition:name="article-title">{title}</h3>
  <main>
    <slot />
  </main> 
</div>