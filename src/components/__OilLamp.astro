<svg width="0">
  <filter id="filter">
    <feTurbulence id="turbulence" type="fractalNoise" baseFrequency=".03" numOctaves="50" />
    <feDisplacementMap in="SourceGraphic" scale="30" />
  </filter>
</svg>

<div
  class="oil-lamp-container"
  absolute
  right-3
  bottom-0
  h-1000px
  w-1000px
  flex
>
  <div class="oil-lamp" absolute></div>
</div>

<style>
  .oil-lamp-container {
    height: 100px;
    width: 2px;
    filter: url("#filter");
    transform: scale(-1);
  }
  .oil-lamp {
    background: linear-gradient(#fff, #999, #ddd, #888);
    filter: blur(5px);
    width: 100%;
    height: 100%;
    bottom: 0;
  }
</style>

<script>
const filter = document.querySelector("#turbulence");
let frames = 1;
let rad = Math.PI / 180;
let bfx, bfy;
let stop = false
function freqAnimation() {
    frames += .3

    bfx = 0.03;
    bfy = 0.03;

    bfx += 0.02 * Math.cos(frames * rad);
    bfy += 0.03 * Math.sin(frames * rad);

    filter?.setAttributeNS(null, "baseFrequency", bfy + ' ' + bfy);
    if (stop || bfy < 0.000001) return
    window.requestAnimationFrame(freqAnimation);
}


window.requestAnimationFrame(freqAnimation); 
</script>
