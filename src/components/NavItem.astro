---
// export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}
const { href, class: className, ...props } = Astro.props;
const isActive = href === Astro.url.pathname;
---

<a href={href} w-full inline-block text-justify text-last-justify font-serif text-gray-300 decoration-none m-b-1 hover="text-gray-700" transition="500" class:list={[className, { 'text-gray-700': isActive }]} {...props}>
	<slot />
</a>
